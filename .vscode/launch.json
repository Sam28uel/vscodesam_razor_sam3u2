{
  "version": "0.2.0",
  "configurations": [
    {
      "cwd": "${workspaceFolder}",
      "executable": "./build/firmware-ascii",
      "name": "firmware",
      "request": "launch",
      "type": "cortex-debug",
      "device": "ATSAM3U2C",
      "runToEntryPoint": "main",
      "showDevDebugOutput": "none",
      "servertype": "jlink",
      "svdPath": "${workspaceFolder}/firmware_common/bsp/ATSAM3U2C.svd",
      "preLaunchTask": "Build firmware",
      "armToolchainPath": "C:\\Program Files (x86)\\Arm GNU Toolchain arm-none-eabi\\13.2 Rel1\\bin"
    },
    {
      "name": "waf",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/waf",
      "args": [
        "${input:waf-command}"
      ],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "justMyCode": false
    },
    {
      "name": "C/C++ Runner: Debug Session",
      "type": "cppdbg",
      "request": "launch",
      "args": [],
      "stopAtEntry": false,
      "externalConsole": true,
      "cwd": "c:/Users/samue/Documents/GitHub/vscodesam_razor_sam3u2/firmware_common/application",
      "program": "c:/Users/samue/Documents/GitHub/vscodesam_razor_sam3u2/firmware_common/application/build/Debug/outDebug",
      "MIMode": "gdb",
      "miDebuggerPath": "gdb",
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ]
    }
  ],
  "inputs": [
    {
      "id": "waf-command",
      "type": "pickString",
      "description": "Which waf subcommand to run",
      "default": "build",
      "options": [
        "distclean",
        "configure",
        "clean",
        "build",
        "clean build"
      ]
    }
  ]
}